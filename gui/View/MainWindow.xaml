<Window x:Class="app.View.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:app.View"
        xmlns:ViewModel="clr-namespace:app.ViewModel"
        mc:Ignorable="d"
        Title="Przychodnia dla psów" Height="450" Width="800">
    <Window.DataContext>
        <ViewModel:MainViewModel />
    </Window.DataContext>

    <Grid>
        <Grid.Resources>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="275*"/>
            <ColumnDefinition Width="256*"/>
            <ColumnDefinition Width="81*"/>
            <ColumnDefinition Width="180*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="ClientsButton" Content="Klienci" HorizontalAlignment="Left" Margin="60,28,0,0" VerticalAlignment="Top" Width="51" Click="ClientsButton_Click" Command="{Binding GetClientDataCmd}" />
        <Button x:Name="DogsButton" Content="Psy" HorizontalAlignment="Left" Margin="116,28,0,0" VerticalAlignment="Top" Width="52" Click="DogsButton_Click" Command="{Binding GetDogDataCmd}" />
    </Grid>
</Window>
